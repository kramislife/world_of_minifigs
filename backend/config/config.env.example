# Server Configuration
PORT=4001
NODE_ENV="DEVELOPMENT"
FRONTEND_URL="http://localhost:5173"

# Database Configuration
DB_URI_LOCAL="mongodb+srv://username:password@your-cluster-url/database?retryWrites=true&w=majority"
DB_URI_PROD="mongodb+srv://username:password@your-cluster-url/database?retryWrites=true&w=majority"

# JWT Configuration
JWT_ACCESS_TOKEN_SECRET="your_access_token_secret_here"
JWT_ACCESS_TOKEN_EXPIRY=1
JWT_REFRESH_TOKEN_SECRET="your_refresh_token_secret_here"
JWT_REFRESH_TOKEN_EXPIRY=7

# Token Expiry Times (in minutes)
EMAIL_VERIFICATION_EXPIRY=1
PASSWORD_RESET_EXPIRY=30

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="Your App Name"
SUPPORT_EMAIL="support@yourdomain.com"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox"  # Change to 'live' for production
PAYPAL_API_URL="https://api-m.sandbox.paypal.com"  # Change to https://api-m.paypal.com for production

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_SECRET_KEY="your_stripe_secret_key"